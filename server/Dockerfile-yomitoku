FROM python:3.10-slim

WORKDIR /app

# Install system dependencies for YomiToku
RUN apt-get update && apt-get install -y \
    libgl1 \
    libglib2.0-0 \
    libgomp1 \
    libgcc-s1 \
    libstdc++6 \
    git \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Install PyTorch CPU-only version
RUN pip install --no-cache-dir torch>=2.5.0 torchvision>=0.16.0 --index-url https://download.pytorch.org/whl/cpu

# Copy requirements and install dependencies
COPY src/requirements-yomitoku.txt .
RUN pip install --no-cache-dir -r requirements-yomitoku.txt

# Copy application code
COPY src/ .

# Environment variables
ENV PYTHONPATH=/app
ENV OCR_ENGINE=yomitoku

# Expose FastAPI port
EXPOSE 8000

# Command to run FastAPI
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]