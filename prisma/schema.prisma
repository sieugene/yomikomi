generator client {
  provider = "prisma-client-js"
  output   = "../src/infrastructure/database/generated"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Note {
  id        String   @id @default(uuid())
  fields    Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Media {
  id     String  @id @default(uuid())
  path   String
  type   String
  originalName String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
